{% extends "admin/layout.twig" %}
{% block title %} {{l.productsCreate.260}} {% endblock %}
{% block content %}






<!-- Main content -->
<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">

        {% include "admin/elements/flash.twig" %}
        <form class="form-horizontal" method='POST' action="{{path_for('products.create')}}" enctype="multipart/form-data" >
        <div class="col-md-9">
            <div class="panel panel-flat ">
                <div class="panel-body">
                        <fieldset class="content-group">
                            <legend class="text-bold">Add a new product</legend>
                            <div class="form-group">
                                <label class="control-label col-lg-2">Product name</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="name"  value="{{ old.name }}">
                                </div>
                            </div>
                                                        
                            <div class="form-group">
                                <label class="control-label col-lg-2">Description</label>
                                <div class="col-lg-10">
                                   <textarea rows="5" name="description" id='posteditor' class="form-control" >{{ old.price }}</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-2">Price</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="price" value="{{ old.price }}">
                                </div>
                            </div>
                         
                            
                            
                            
                            <div class="form-group">
                                <label class="control-label col-lg-2">  The price of the product after the sale</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="discount" value="{{ old.discount }}">
                                </div>
                            </div>
                            
                            
                            
                               
                            <div class="form-group">
                                <label class="control-label col-lg-2">Price of the second product, optional</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="price_2" value="{{ old.price }}">
                                </div>
                            </div>
                            
                            
                            <div class="form-group">
                                <label class="control-label col-lg-2"> Activing the size </label>
                                <div class="col-lg-10">
                                    <input type="checkbox" class="form-control" name="size" >
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="control-label col-lg-2">Activing the color   </label>
                                <div class="col-lg-10">
                                    <input type="checkbox" class="form-control" name="color" >
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="control-label col-lg-2"> Show in the main</label>
                                <div class="col-lg-10">
                                    <input type="checkbox" class="form-control" name="show_home" >
                                </div>
                            </div>
                            
                        </fieldset>
                        
                    
                </div>
            </div>
            

   </div>
   
   
<div class="col-md-3">
   <button type="submit" class="btn btn-block btn-primary">Add a new product <i class="icon-arrow-left13 position-right"></i></button>
   <br>
    <div class="panel panel-white">
        <div class="panel-heading">
       The external image of the product
        </div>
        <div class="panel-body">
          <div class="preview-thumbnail">
                    <img src="" id="profile_avatar"  />
            </div>
           <label for="ProductThumbnail" class="btn btn-danger btn-rounded"><i class="icon-image2 position-left"></i> choose image </label>
            <input name="ProductThumbnail" id="ProductThumbnail" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file" />
        </div>
    </div>
    
    
     <div class="panel panel-white">
        <div class="panel-heading">
       Product gallery
        </div>
        <div class="panel-body">
            

<label for="galleryImages" class="btn btn-danger btn-rounded"><i class="icon-image2 position-left"></i> choose images </label>
<input name="galleryImages[]" id="galleryImages" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file" multiple />

       
         
        </div>
        		</div>

    
    
    <div class="panel panel-white">
		<div class="panel-heading">
			<h6 class="panel-title">  Product classification </h6>
		</div>

		<div class="panel-body">
			 <select  name="category" style="width:100%;" class="form-control">
                <option value="NOTDEFFINED"> Not deffined</option>
                {% for categorie in categories %}
                <option value="{{categorie.id}}">{{categorie.name}}</option>
                {% endfor %} 
        </select>
		</div>
	</div>

</div>
</form>
   
   
    </div>
</div>            
 
      
{% endblock %}
