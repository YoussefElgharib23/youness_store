<div class="page-header-content">

<div class="page-title">
<h1> <span class="text-semibold"><i class="icon-arrow-right6 position-left goback"></i>
 statistics

</span></h1>
</div>

<div class="heading-elements stastsForm" style="display:none;">
    <form class="heading-form" id="form-stats-From-To" autocomplete="off" method="GET" action="{{pages.revenue}}">
        <div class="col-md-5">
        <div class="form-group">
            <label for="">Date from</label>
            <input type="text" name="from" placeholder="   Date from" class="form-control" id="datepickerFrom">
        </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                <label for=""> Date to</label>
                <input type="text" name="to" placeholder="Date to" class="form-control" id="datepickerTo">
            </div>
            </div>
        <div class="col-md-1">
        <div class="form-group">
            <button class="btn btn-success" type="submit">
                <i class="icon-search4"></i></button></div>
        </div>
    </form>
</div>

